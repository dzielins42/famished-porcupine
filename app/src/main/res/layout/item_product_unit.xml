<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/single_line_item_with_icon_height"
    android:paddingStart="@dimen/double_space"
    android:paddingEnd="@dimen/double_space">

    <ImageView
        android:id="@+id/freshnessIndicator"
        android:layout_width="@dimen/avatar_circle_size"
        android:layout_height="@dimen/avatar_circle_size"
        android:src="@drawable/shape_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:tint="@color/chelsea_cucumber" />

    <TextView
        android:id="@+id/expirationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/double_space"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/freshnessIndicator"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Lorem ipsum dolor." />

    <ImageButton
        android:id="@+id/removeButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="@color/mtrl_text_btn_text_color_selector"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_delete_black_24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>